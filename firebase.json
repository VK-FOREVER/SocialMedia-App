
import firebase/firebase-app
import 'firebase/auth';  // For Authentication (optional)
import 'firebase/firestore';  // For Firestore (optional)
import 'firebase/storage';  // For Firebase Storage (optional)

// Firebase configuration from Firebase console
const firebaseConfig = {
  apiKey: "your-api-key",
  authDomain: "your-auth-domain",
  projectId: "your-project-id",
  storageBucket: "your-storage-bucket",
  messagingSenderId: "your-messaging-sender-id",
  appId: "your-app-id",
  measurementId: "your-measurement-id"
};

// Initialize Firebase
if (!firebase.apps.length) {
  firebase.initializeApp(firebaseConfig);
} else {
  firebase.app();  // Use the default app
}

// Export the Firebase instance (optional, if you need to use it in other files)
export default firebase;

// Firebase Authentication Example
const auth = firebase.auth();
auth.signInWithEmailAndPassword('user@example.com', 'password')
  .then((userCredential) => {
    console.log('User signed in:', userCredential.user);
  })
  .catch((error) => {
    console.error('Error signing in:', error);
  });


